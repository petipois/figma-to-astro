---
import Layout from "@/layouts/Layout.astro";
import Figstro from "@/components/Figstro.vue";
import ResetButton from "@/components/ResetButton.vue";
import { createCreditAccount, getUserInfo } from "@/lib/appwrite";

const user = await Astro.locals.currentUser();
let userCredits;

if (user) {
  const credits = await getUserInfo(user.id);
  userCredits = credits?.credits;
  if(!userCredits)
{
  await createCreditAccount(user.id);
}
}
---

<Layout>
  <section
    class="flex flex-col py-26 items-center justify-center min-h-screen px-6 text-center bg-gradient-to-b from-white to-orange-50"
  >
    <h1
      class="text-5xl md:text-6xl font-extrabold mb-4 text-gray-900 drop-shadow-md"
    >
      Figma to Astro Demo
    </h1>

    {userCredits > 0 ? (
      <>
        <p class="text-gray-700 mb-4 max-w-xl text-center">
          View a Figma file URL below and generate ready-to-use Astro
          components. You have 60 seconds to copy the generated components.
        </p>

        <!-- Figma generator component -->
        <Figstro userID={user?.id} client:load />

      </>
    ) : (
      <div class="max-w-2xl mx-auto">
        <!-- No Credits Card -->
        <div class="bg-white rounded-2xl shadow-xl border border-orange-100 p-8 mb-8 relative overflow-hidden">
          <div class="absolute top-0 right-0 w-32 h-32 bg-gradient-to-bl from-orange-100 to-transparent rounded-full -mr-16 -mt-16" />
          <div class="absolute bottom-0 left-0 w-24 h-24 bg-gradient-to-tr from-orange-50 to-transparent rounded-full -ml-12 -mb-12" />

          <div class="flex justify-center mb-6">
            <div class="w-16 h-16 bg-gradient-to-r from-orange-500 to-red-500 rounded-full flex items-center justify-center shadow-lg">
              <svg
                class="w-8 h-8 text-white"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.732-.833-2.5 0L4.314 16.5c-.77.833.192 2.5 1.732 2.5z"
                />
              </svg>
            </div>
          </div>

          <h2 class="text-2xl font-bold text-gray-900 mb-4">Out of Credits</h2>
          <p class="text-gray-600 mb-6 text-lg leading-relaxed">
            You've used all your available credits. Reset your credits to
            continue generating Astro components, for a fee 
            <span class="italic font-semibold">(no charge with this demo)</span>.
          </p>

          <div class="bg-gray-50 rounded-lg p-4 mb-6 border-l-4 border-orange-500">
            <div class="flex items-center justify-center">
              <span class="text-sm font-medium text-gray-500 mr-2">Current Credits:</span>
              <span class="text-xl font-bold text-orange-600">0</span>
            </div>
          </div>

          <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
            <ResetButton userID={user?.id} client:load/>
          </div>

          <!-- Benefits section -->
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mt-6">
            <div class="bg-white/50 backdrop-blur-sm rounded-xl p-6 border border-orange-100">
              <div class="flex items-center mb-3">
                <div class="w-10 h-10 bg-green-100 rounded-lg flex items-center justify-center mr-3">
                  <svg
                    class="w-6 h-6 text-green-600"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"
                    />
                  </svg>
                </div>
                <h3 class="font-semibold text-gray-900">Reset Credits</h3>
              </div>
              <p class="text-sm text-gray-600">
                Get a fresh set of credits to continue experimenting with the demo
              </p>
            </div>

            <div class="bg-white/50 backdrop-blur-sm rounded-xl p-6 border border-orange-100">
              <div class="flex items-center mb-3">
                <div class="w-10 h-10 bg-orange-100 rounded-lg flex items-center justify-center mr-3">
                  <svg
                    class="w-6 h-6 text-orange-600"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M13 10V3L4 14h7v7l9-11h-7z"
                    />
                  </svg>
                </div>
                <h3 class="font-semibold text-gray-900">Pro Access - coming soon</h3>
              </div>
              <p class="text-sm text-gray-600">
                Unlimited generations, priority support, and advanced features
              </p>
            </div>
          </div>
        </div>
      </div>
    )}
  </section>
</Layout>
