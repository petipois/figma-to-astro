---
import { howItWorksSteps } from "@/lib/consts";
import Layout from "../layouts/Layout.astro";
import Button from "@/components/starwind/button";
---

<Layout>
  <span slot="title">Figstro - Convert Figma to Astro Components</span>

  <!-- Hero Section -->
  <section
    class="relative flex flex-col items-center justify-center min-h-screen text-center bg-gradient-to-br from-orange-50 via-white to-orange-50 px-6 py-20"
  >
    <div class="relative z-10 max-w-4xl mx-auto">
      <span class="flex justify-center items-center gap-4">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="84"
          height="84"
