---
const year = new Date().getFullYear();
import { navLinks, logo } from "@/lib/consts";
---

<footer class="bg-orange-700 shadow-sm">
    <div
        class="w-full mx-auto max-w-screen-xl p-4 md:flex md:items-center md:justify-between"
    >
        <a href="/" class="flex items-center space-x-3 rtl:space-x-reverse">
            <span class="rounded-full bg-white p-2">
                <img src={logo} alt="Figstro Logo" class="w-8" /></span
            >
            <span class="self-center text-white text-2xl font-semibold whitespace-nowrap"
                >Figstro</span
            >
        </a>
        <span class="text-sm text-white font-bold sm:text-center"
            >Â© {year}
            <a href="/" class="hover:underline">Figstro</a>. All Rights
            Reserved.
        </span>
        <ul
            class="flex flex-wrap items-center mt-3 text-sm font-medium text-white sm:mt-0"
        >
            {
                navLinks.map((navLink: any) => (
                    <li>
                        <a
                            href={navLink.link}
                            class="hover:underline me-4 md:me-6"
                        >
                            {navLink.label}
                        </a>
                    </li>
                ))
            }
        </ul>
    </div>
</footer>
